@{
    PageData["title"] = "Profilo artistico";
}
<div align="center"><h3>L'artista</h3></div>
<div style="float:left;width:20%;height:500px;">
    <div ng-repeat="image in images">
        <img ng-src="{{image.link}}" height="200" width="200" />
    </div>
</div>
<div class="accordionContainer">
    
    <div>&nbsp;</div>
    <div data-ng-repeat="presentazione in presentazioni">
        <accordion close-others="oneAtATime">
            <accordion-group is-open="status.openfirst">
                <accordion-heading>
                    {{presentazione.title}}
                    <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.openfirst, 'glyphicon-chevron-right': !status.openfirst}"></i>
                </accordion-heading>
                <div align="justify">
                    {{presentazione.description}}
                </div>
            </accordion-group>
        </accordion>
    </div>
        <div align="center">
            <img height="500" width="640" src="~/Images/Artista.JPG" />
        </div>
        <div>&nbsp;</div>
        <div data-ng-repeat="paragrafo in paragrafi">
            <accordion close-others="oneAtATime">
                <accordion-group is-open="status.open">
                    <accordion-heading>
                        {{paragrafo.title}}
                        <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
                    </accordion-heading>
                    <div align="justify">
                        {{paragrafo.description}}
                    </div>
                </accordion-group>
            </accordion>
        </div>

    </div>





<div style="float:left;width:20%;height:500px;">
    <div ng-repeat="image in images">
        <img ng-src="{{image.link}}" height="200" width="200" />
    </div>
</div>
